<div class="container">
    <div class="row">
        <div class="">
            <div class="panel border bg-white">
                <div class="panel-heading">
                    <h3 class="pt-3 font-weight-bold">Update category</h3>
                </div>
                <div class="panel-body p-3">
                    {{#if messages}}
                    <div class="{{#if messages}}bg-success{{else}}bg-danger{{/if}} shadow p-2 rounded">
                        <span class="text-white h6">{{messages}}</span>
                    </div>
                    {{/if}}
                    <form action="/category/update/{{category._id}}" method="POST">
                        <div class="form-group py-2">
                            <label>category name</label>
                            <input type="text" placeholder="Enter name" class="form-control" name="name"
                                value="{{category.name}}" required>
                        </div>
                        <button type="submit" class="btn btn-success btn-block mt-3">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>