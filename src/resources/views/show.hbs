<div class="d-flex flex-row my-4 justify-content-center">
    <h1 class="m-0 text-uppercase text-success text-center pages-title">Food Details</h1>
</div>
<section class="py-4">
    <div class="container-fuild px-4 px-lg-5 mb-4 mt-0">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="../../uploads/{{product.image}}"
                    alt="..." /></div>
            <div class="col-md-6">
                <div class="small mb-1">{{product.category}}</div>
                <h1 class="display-5 fw-bolder">{{product.name}}</h1>
                <div class="fs-2 mb-5 fw-bolder">
                    <span>${{product.price}}</span>
                </div>
                <p class="lead">{{product.desc}}</p>
                <form action="/cart/add-to-cart-from-show/{{product._id}}" method="POST">
                    <div class="d-flex">
                        <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1"
                            style="max-width: 3rem" min="1" name="value"/>
                        <button type="submit" class="btn btn-outline-dark flex-shrink-0">
                            <i class="bi-cart-fill me-1"></i>
                            Add to cart
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- Related items section-->
<section class="py-4 bg-light">
    <div class="container-fuild px-4 px-lg-5 mt-3">
        <h2 class="fw-bolder mb-4">Related products</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            {{#each listProduct}}
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                    <img class="card-img-top" src="../../uploads/{{this.image}}" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">{{this.name}}</h5>
                            <!-- Product price-->
                            ${{this.price}}
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-dark mt-auto"
                                href="/product/show/{{this._id}}">View options</a></div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>