<div class="container validation-container">
    <div class="row">
        <div class="offset-md-2 col-lg-5 col-md-7 offset-lg-4 offset-md-3">
            <div class="panel border bg-white">
                <div class="panel-heading">
                    <h3 class="pt-3 fw-bolder">Register</h3>
                </div>
                <div class="panel-body p-3">
                    {{!-- {{#if failMsg}}{{failMsg}}{{/if}} --}}
                    {{#if error_messages }}
                    <div class="alert alert-danger shadow p-2 rounded m-0">{{error_messages}}</div>
                    {{/if}}
                    <form action="/store" method="POST">
                        <div class="form-group py-2">
                            <div class="input-field">
                                <span class="far fa-user p-2" style="color: green"></span>
                                <input type="email" placeholder="Enter your Email" name="email" class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group py-1 pb-2">
                            <div class="input-field">
                                <span class="fas fa-lock px-2" style="color: green"></span>
                                <input type="password" placeholder="Enter your Password"  class="form-control" name="password" required>
                            </div>
                        </div>
                        <div class="form-group py-1 pb-2">
                            <div class="input-field">
                                <span class="fas fa-lock px-2" style="color: green"></span>
                                <input type="password" placeholder="Confirm your Password"  class="form-control" name="confirmPassword" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success btn-block mt-3 w-100 rounded-pill">Register</button>
                        <div class="text-center pt-4 text-muted">Don't have an account?
                            <a class="login-link" href="/login">Login</a>
                        </div>
                    </form>
                </div>
                <div class="mx-3 my-2 py-2 bordert">
                    <div class="hide-md-lg">
                        <p class="m-0">Or connect with:</p>
                    </div>
                    <div class="text-center py-3">
                        <a class="login-link" href="/auth/facebook" class="px-2">
                            <img class="mx-2" src="https://www.dpreview.com/files/p/articles/4698742202/facebook.jpeg" alt="">
                        </a>
                        <a class="login-link" href="/auth/google" class="px-2">
                            <img class="mx-2" src="https://www.freepnglogos.com/uploads/google-logo-png/google-logo-png-suite-everything-you-need-know-about-google-newest-0.png"
                                alt="">
                        </a>
                        {{!-- <a class="login-link" href="https://www.github.com" target="_blank" class="px-2">
                            <img class="mx-2" src="https://www.freepnglogos.com/uploads/512x512-logo-png/512x512-logo-github-icon-35.png"
                                alt="">
                        </a> --}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>